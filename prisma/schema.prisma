generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  email String @unique

  transactions Transaction[]
}

model Transaction {
  id          String   @id
  userId      String
  description String
  amount      Float
  date        DateTime
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}
